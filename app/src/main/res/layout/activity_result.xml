<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/banner"/>

    <View style="@style/divider"/>

    <TextView
        style="@style/header_title"
        android:text="@string/sugest_o_de_abastecimento"
        android:drawableStart="@drawable/analisis_icon"/>

    <View style="@style/divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:weightSum="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/etanol"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </LinearLayout>

    <View
        style="@style/divider"/>

    <TextView
        style="@style/header_title"
        android:text="@string/gasto_r_km"
        android:drawableStart="@drawable/coins_icon"/>
    <View
        style="@style/divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:weightSum="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_0_30"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_weight="0.5"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_0_30"
            android:textSize="30dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:layout_gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:weightSum="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gasolina"
            android:textSize="12dp"
            android:gravity="center"
            android:layout_weight="0.5"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alcool"
            android:textSize="12dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>